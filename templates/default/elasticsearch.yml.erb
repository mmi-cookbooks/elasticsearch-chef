# Generated by Chef DO NOT MODIFY
cluster:
  name: <%= node['elasticsearch']['cluster_name'] %>

network:
  host: <%= node['elasticsearch']['listen_address'] %>

http:
  port: <%= node['elasticsearch']['http_port'] %>

transport:
  port: <%= node['elasticsearch']['transport_port'] %>

index:
  number_of_shards: <%= node['elasticsearch']['shards'] %>
  number_of_replicas: <%= node['elasticsearch']['replicas'] %>
  refresh_interval: <%= node['elasticsearch']['refresh_interval'] %>
  cache.field.type: <%= node['elasticsearch']['cache_field_type'] %>
  store.compress.stored: true


discovery:
  zen:
    ping.multicast.enabled: false
<% if @seed_nodes -%>
    ping.unicast.hosts: [ <%= @seed_nodes.join(", ") %> ]
<% end -%>

node:
  name: "<%= node.name %>"
<% if @client_only -%>
  master: false
  data: false
<% end -%>

# CVE-2014-3120
script:
  disable_dynamic: true

bootstrap:
  mlockall: true

path:
  data: /var/lib/elasticsearch
  conf: /etc/elasticsearch
  work: /tmp/elasticsearch
